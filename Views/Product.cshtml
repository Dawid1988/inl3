@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.Product>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
	Layout = "masterLayout.cshtml";
}
    <script src="/JavaScript/main.js"></script>


<div class="container" id='@Model.Id'/>
    <div class="row">
        <div class="col-3">
    	    <h3 id="product-head-text" class="product-title">@Model.Value("productTitle")</h3>
    	</div>
    </div>	
    <div class="row">
        <div class="col-3">
    	<p class="product-description">Description: @Model.Value("productDescription")</p>
    		<p class="product-price">Price: <span id="product-price">@Model.Value("productPrice")</span></p>
    	</div>
    </div>

	<div class="row">
	    <div class="col-5">
			<div class="product-picture">
				<img id="product-picture" style="width: 100%" src='@Model.ProductImage.Url'/>
			</div>
		</div>
	</div>
	<div class="row">
	    <div class="col-3 mt-5">
	        <input id="product-quantity" class="product-quantity" type="number" placeholder="Quantity" name="Quantity" min="0" max="10">
	    </div>
	</div>
			
			<div class="row mt-5">
			    <div class="col-3">
				    <button id="buy-button" class="btn btn-primary" onClick='addToBasket(@Model.Id)'>Buy</button>
				</div>
			</div>
</div>



