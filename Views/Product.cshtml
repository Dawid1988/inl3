@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.Product>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
	Layout = "masterLayout.cshtml";
}
    <script src="/JavaScript/main.js"></script>


<div class="container" id='@Model.Id'/>
    <div class="row">
        <div class="col-3">
    	    <h3 id="product-head-text" class="product-title">@Model.Value("productTitle")</h3>
    	</div>
    </div>	
    <div class="row">
        <div class="col-3">
    	<span class="product-description">Description: @Model.Value("productDescription")</span>
    		<span id="product-price" class="product-price">Price: @Model.Value("productPrice")</span>
    	</div>
    </div>

	<div class="row">
	    <div class="col-5">
			<div class="product-picture">
				<img id="product-picture" style="width: 100%" src='@Model.ProductImage.Url'/>
			</div>
		</div>
	</div>
	<div class="row">
	    <div class="col-3 mt-5">
	        <input id="product-quantity" class="product-quantity" type="number" placeholder="Quantity" name="Quantity" min="0" max="10">
	    </div>
	</div>
			
			<div class="row mt-5">
			    <div class="col-3">
				    <button class="buy-button" type="button" onClick='addToBasket(@Model.Id)'>Buy</button>
				</div>
			</div>
</div>



